<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AtividadeDescriptionActivity">

    <TextView android:id="@+id/descrip_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="Name: Task 1"
        android:layout_marginVertical="2pt"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="15pt"/>

    <TextView android:id="@+id/descrip_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:text="Date: 13/12/2018"
        android:layout_marginVertical="2pt"
        android:textSize="10pt"/>

    <TextView android:id="@+id/descrip_hour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:text="Hour: 13:20"
        android:layout_marginVertical="2pt"
        android:textSize="10pt"/>

    <TextView
        android:id="@+id/descrip_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="Address: localization"
        android:layout_marginVertical="2pt"
        android:textSize="10pt"/>

    <TextView
        android:id="@+id/descrip_location_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="Name: local"
        android:layout_marginVertical="2pt"
        android:textSize="10pt"/>

    <TextView android:id="@+id/descrip_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="Description: Short Task"
        android:layout_marginVertical="2pt"
        android:textSize="10pt"/>

    <Button android:id="@+id/button_open_route"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show in Map"
        android:layout_marginVertical="2pt"/>

</LinearLayout>